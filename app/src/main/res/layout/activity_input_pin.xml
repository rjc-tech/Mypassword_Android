<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp">

    <!-- PINコード INFO -->
    <TextView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:minLines="2"
        android:text="@string/msg_request_input_pin"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="18dp"/>

    <!-- PINコード 入力欄 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/pin1"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/pin2"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="numberPassword"
            android:maxLength="1"/>

        <EditText
            android:id="@+id/pin3"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="numberPassword"
            android:maxLength="1"/>

        <EditText
            android:id="@+id/pin4"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="numberPassword"
            android:maxLength="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <!-- テンキー 7～9 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tenKey7"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="7"
                android:textSize="25dp"/>

            <Button
                android:id="@+id/tenKey8"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="8"
                android:textSize="25dp"/>

            <Button
                android:id="@+id/tenKey9"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="9"
                android:textSize="25dp"/>

        </LinearLayout>

        <!-- テンキー 4～6 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tenKey4"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="4"
                android:textSize="25dp"/>

            <Button
                android:id="@+id/tenKey5"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="5"
                android:textSize="25dp"/>

            <Button
                android:id="@+id/tenKey6"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="6"
                android:textSize="25dp"/>

        </LinearLayout>

        <!-- テンキー 1～3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tenKey1"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="1"
                android:textSize="25dp"/>

            <Button
                android:id="@+id/tenKey2"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="2"
                android:textSize="25dp"/>

            <Button
                android:id="@+id/tenKey3"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="3"
                android:textSize="25dp"/>

        </LinearLayout>

        <!-- テンキー 0、-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tenKey0"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="2"
                android:text="0"
                android:textSize="25dp"/>

            <Button
                android:id="@+id/tenKeyBS"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="BS"
                android:textSize="25dp"/>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_edit_pin_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/gray"
        android:text="@string/btn_label_cancel"
        android:textColor="@android:color/white"
        android:visibility="gone"/>
</LinearLayout>