<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/make_entry_details"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jp.co.rjc.mypassword.MakeEntryDetailActivity">

    <TextView
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:text="@string/page_name"
        android:id="@+id/textView6"
        app:layout_constraintLeft_toLeftOf="@+id/make_entry_details"
        app:layout_constraintTop_toTopOf="@+id/make_entry_details" />

    <TextView
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:text="@string/text_name"
        app:layout_constraintLeft_toLeftOf="@+id/make_entry_details"
        app:layout_constraintTop_toBottomOf="@+id/make_entry_details"
        android:layout_marginTop="16dp" />

    <EditText android:id="@+id/name"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@+id/make_entry_details"
        app:layout_constraintRight_toRightOf="@+id/make_entry_details" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/make_entry_details"
        app:layout_constraintTop_toBottomOf="@+id/make_entry_details">

        <TextView
            android:layout_width="377dp"
            android:layout_height="19dp"
            android:text="@string/loginId"
            tools:layout_editor_absoluteY="290dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="@+id/make_entry_details"
            app:layout_constraintRight_toRightOf="@+id/make_entry_details"
            app:layout_constraintHorizontal_bias="0.0" />

        <EditText android:id="@+id/loginName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="3dp"
            app:layout_constraintLeft_toLeftOf="@+id/make_entry_details" />

        <Button android:id="@+id/btnCopyLoginName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/textView7"
            android:layout_marginTop="64dp"
            app:layout_constraintRight_toRightOf="@+id/loginName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/make_entry_details"
        app:layout_constraintTop_toBottomOf="@+id/make_entry_details">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/passward"
            android:id="@+id/textView10"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintTop_toBottomOf="@+id/loginName"
            android:layout_marginTop="32dp" />

        <EditText android:id="@+id/password"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintBottom_toTopOf="@+id/btnCopyPassword"
            android:layout_marginBottom="40dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/make_entry_details"
        app:layout_constraintTop_toBottomOf="@+id/make_entry_details">

        <TextView
            android:layout_width="384dp"
            android:layout_height="wrap_content"
            android:text="@string/url"
            android:id="@+id/textView9"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="195dp" />

        <EditText android:id="@+id/url"
            android:layout_width="384dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/make_entry_details"
            app:layout_constraintBottom_toBottomOf="@+id/textView10" />
    </LinearLayout>


    <TextView
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:text="@string/bikou"
        android:id="@+id/textView8"
        app:layout_constraintLeft_toLeftOf="@+id/make_entry_details"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toTopOf="@+id/make_entry_details"
        android:layout_marginBottom="112dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button android:id="@+id/btnBrows"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/make_entry_details"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView8" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/make_entry_details"
        app:layout_constraintTop_toBottomOf="@+id/make_entry_details">

        <Button android:id="@+id/btnCopyPassword"
            android:layout_width="384dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="378dp" />

        <Button android:id="@+id/btnDelete"
            android:layout_width="384dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintBottom_toTopOf="@+id/btnCopyPassword"
            android:layout_marginBottom="32dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
